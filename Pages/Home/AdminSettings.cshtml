@page
@model DriveBotsWebsite.Pages.Home.AdminSettingsModel
@{
    ViewData["Title"] = "Admin Settings";
    Layout = "_adminLayout";
}

<div class="sidebar">
    @Html.ActionLink(
            linkText: "Home",
            actionName: "Admin",
            controllerName: "Home",
            routeValues: null,
            htmlAttributes: new { @class = "nav-item" }
            )
    @Html.ActionLink(
            linkText: "Applications",
            actionName: "AdminApplications",
            controllerName: "Home",
            routeValues: null,
            htmlAttributes: new { @class = "nav-item" }
            )

    @Html.ActionLink(
            linkText: "Transaction",
            actionName: "Transaction",
            controllerName: "Home",
            routeValues: null,
            htmlAttributes: new { @class = "nav-item" }
            )
    @Html.ActionLink(
            linkText: "Report and Analytics",
            actionName: "ReportandAnalytics",
            controllerName: "Home",
            routeValues: null,
            htmlAttributes: new { @class = "nav-item" }
            )

    @Html.ActionLink(
            linkText: "User Management",
            actionName: "Usermanagement",
            controllerName: "Home",
            routeValues: null,
            htmlAttributes: new { @class = "nav-item" }
            )
    @Html.ActionLink(
            linkText: "Settings",
            actionName: "AdminSettings",
            controllerName: "Home",
            routeValues: null,
            htmlAttributes: new { @class = "nav-item" }
            )

</div>


<div class="settings-container">
    <h1 class="settings-title">Admin Settings</h1>

    <div class="space-y-12">
        <section class="section">
            <h2 class="section-title">Account & Profile</h2>
            <form class="space-y-4">
                <div>
                    <label class="block font-semibold">Email</label>
                    <input type="email" placeholder="admin@example.com" class="input-field">
                </div>
            </form>
        </section>


        <section class="section">
            <h2 class="section-title">Change Password</h2>
            <form class="space-y-4">
                <div>
                    <label class="block font-semibold">New Password</label>
                    <input type="password" placeholder="Enter new password" class="input-field">
                </div>
                <div>
                    <label class="block font-semibold">Confirm Password</label>
                    <input type="password" placeholder="Re-enter password" class="input-field">
                </div>
            </form>
            <button class="save-button">Update Password</button>
        </section>


        <section class="section">
            <h2 class="section-title">Notification Preferences</h2>
            <div class="space-y-4">
                <div>
                    <label class="block font-semibold">Email Notifications</label>
                    <select class="select-field">
                        <option>All</option>
                        <option>Security only</option>
                        <option>None</option>
                    </select>
                </div>
                <div>
                    <label class="block font-semibold">Receive System Alerts</label>
                    <select class="select-field">
                        <option>All</option>
                        <option>Critical only</option>
                        <option>None</option>
                    </select>
                </div>
            </div>
            <button class="save-button">Save All Changes</button>
        </section>
    </div>
</div>



