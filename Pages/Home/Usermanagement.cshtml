@page
@model DriveBotsWebsite.Pages.Home.UsermanagementModel
﻿@{
    ViewData["Title"] = "User Management";
    Layout = "_adminLayout";
}

<div class="sidebar">

    @Html.ActionLink(
                    linkText: "Home",
                    actionName: "Admin",
                    controllerName: "Home",
                    routeValues: null,
                    htmlAttributes: new { @class = "nav-item" }
                    )

    @Html.ActionLink(
                    linkText: "Applications",
                    actionName: "Applications",
                    controllerName: "Home",
                    routeValues: null,
                    htmlAttributes: new { @class = "nav-item" }
                    )

    @Html.ActionLink(
                    linkText: "Reports and Analytics",
                    actionName: "ReportandAnalytics",
                    controllerName: "Home",
                    routeValues: null,
                    htmlAttributes: new { @class = "nav-item" }
                    )

    @Html.ActionLink(
                    linkText: "Transaction",
                    actionName: "Transaction",
                    controllerName: "Home",
                    routeValues: null,
                    htmlAttributes: new { @class = "nav-item" }
                    )
    @Html.ActionLink(
                    linkText: "Settings",
                    actionName: "AdminSettings",
                    controllerName: "Home",
                    routeValues: null,
                    htmlAttributes: new { @class = "nav-item" }
                    )

</div>

<div class="user-management">
    <h2>User Management - DriveBots</h2>
    <p>Below is a list of users registered in the DriveBots system. You can remove users as needed.</p>

    <div class="user-summary-cards">
        <div class="user-card">
            <h3>Total Users</h3>
            <p>1,200</p>
        </div>
    </div>

    <div class="user-table-container">
        <table class="user-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Date Registered</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @* Sample repeated users *@
                @for (int i = 1; i <= 10; i++)
                {
                        <tr>
                            <td>User @i</td>
                            <td>user@drivebots.io</td>
                            <td>2025-04-0@((i % 9) + 1)</td>
                            <td>
                                <button class="delete-btn" onclick="confirm('Are you sure you want to delete this user?')">Delete</button>
                            </td>
                        </tr>
                }
            </tbody>
        </table>
    </div>
</div>



