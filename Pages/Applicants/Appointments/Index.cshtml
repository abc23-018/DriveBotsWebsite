@model DriveBotsWebsite.Pages.Applicants.Appointments.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Appointment[0].UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Appointment[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Appointment[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Appointment[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Appointment[0].AppointmentType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Appointment[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Appointment[0].Location)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Appointment) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AppointmentType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
